{% extends 'base.html.twig' %}

{% block title %}Produits{% endblock %}

{% block body %}
    <h1>{{ 'produit.title'|trans}}</h1>
    {% if produits is not empty %}
        <table class="table">
            <thead>
                <tr>
                    <th>{{ 'produit.photo'|trans}}</th>
                    <th>{{ 'produit.nom'|trans}}</th>
                    <th>{{ 'produit.quantite'|trans}}</th>
                    <th>{{ 'produit.prix'|trans}}</th>
                </tr>
            </thead>
            <tbody>
                {% for produit in produits %}
                    <tr>
                        <td>
                        {% if produit.photo is not empty %}
                                <img src="{{ asset('uploads/'~ produit.photo) }}" style="max-width: 200px;">
                        {% endif %}
                        </td>
                        <td> <a href="{{ path( 'produit_edit', {'id': produit.id})}}">
                                {{produit.nom}}
                            </a>
                        </td>
                        <td>{{produit.quantite}}</td>
                        <td>{{produit.prix}}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

    {% else %} 
        <p>{{ 'produit.aucun'|trans}}</p>
    {% endif %} 

    <h2>{{ 'produit.add'|trans}}</h2>
    	{{form(ajout_produit)}}
{% endblock %}
